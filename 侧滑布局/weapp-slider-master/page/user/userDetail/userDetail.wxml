<view class="container container-gray">
  <view class="group">
    <!-- <view class="group-header">详情</view> -->
    <view class="group-body">
      <view class="input-list">
        <view class="input-item">
          <text class="input-item-label">操作员</text>
          <view class="input-item-content">
            <input type="text" placeholder="{{id}}"></input>
          </view>
        </view>
        <view class="input-item">
          <text class="input-item-label">操作时间</text>
          <view class="input-item-content">
            <input type="text" placeholder="{{name}}"></input>
          </view>
        </view>
        <view class="input-item">
          <text class="input-item-label">功能模块</text>
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view class="picker">
              {{array[index]}}
            </view>
          </picker>
        </view>
        <view class="input-item">
          <text class="input-item-label">ip</text>
          <picker class="input-item-content" bindchange="bindPickerChange1" data-pickername="status" value="{{statusindex}}" range="{{statusarr}}" mode="selector">{{statusarr[statusindex]}}
          </picker>
        </view>
        <view class="input-item input-item-full">
          <text class="input-item-label">备注信息</text>
          <textarea placeholder="{{name}}" maxlength="50"></textarea>
        </view>
